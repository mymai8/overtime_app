<h1>Edit Actual Overtime Request</h1>

<%= form_with(model: @actual_overtime_request, local: true) do |form| %>
  <% if @actual_overtime_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@actual_overtime_request.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% @actual_overtime_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :actual_start_time, "Actual Overtime Start Time" %>
    <%= form.datetime_select :actual_start_time %>
  </div>

  <div class="field">
    <%= form.label :actual_end_time, "Actual Overtime End Time" %>
    <%= form.datetime_select :actual_end_time %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>